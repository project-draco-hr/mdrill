{
  if (needExponentialFormat(d)) {
    exp=true;
    intDigits=1;
    expDecimalDigits=decimalDigits(d,true);
    if (d < 0)     sign=true;
 else     sign=false;
  }
 else {
    exp=false;
    intDigits=Math.max(1,intDigits(d));
    decimalDigits=decimalDigits(d,false);
    if (d < 0.0)     sign=true;
 else     sign=false;
  }
}
