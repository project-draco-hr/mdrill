{
  int numLeaves;
  if (!m_isLeaf) {
    numLeaves=0;
    int numEmptyLeaves=0;
    for (int i=0; i < m_sons.length; i++) {
      numLeaves+=m_sons[i].getNumLeaves();
      if (m_sons[i].m_isLeaf && !m_sons[i].hasModels())       numEmptyLeaves++;
    }
    if (numEmptyLeaves > 1) {
      numLeaves-=(numEmptyLeaves - 1);
    }
  }
 else {
    numLeaves=1;
  }
  return numLeaves;
}
