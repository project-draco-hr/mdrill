{
  if (m_numExecutionSlots < 1) {
    throw new Exception("Number of execution slots needs to be >= 1!");
  }
  if (m_numExecutionSlots > 1) {
    if (m_Debug) {
      System.out.println("Starting executor pool with " + m_numExecutionSlots + " slots...");
    }
    startExecutorPool();
  }
  m_completed=0;
  m_failed=0;
}
