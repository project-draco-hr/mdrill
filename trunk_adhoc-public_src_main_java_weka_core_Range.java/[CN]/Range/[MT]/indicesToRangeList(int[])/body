{
  StringBuffer rl=new StringBuffer();
  int last=-2;
  boolean range=false;
  for (int i=0; i < indices.length; i++) {
    if (i == 0) {
      rl.append(indices[i] + 1);
    }
 else     if (indices[i] == last) {
      range=true;
    }
 else {
      if (range) {
        rl.append('-').append(last);
        range=false;
      }
      rl.append(',').append(indices[i] + 1);
    }
    last=indices[i] + 1;
  }
  if (range) {
    rl.append('-').append(last);
  }
  return rl.toString();
}
