{
  long t1=System.currentTimeMillis();
synchronized (descriptor) {
    long position=getFilePointer();
    if (position != descriptor.position) {
      descriptor.in.seek(position);
      descriptor.position=position;
    }
    int total=0;
    do {
      int i=descriptor.in.read(b,offset + total,len - total);
      if (i == -1) {
        throw new IOException("Read past EOF");
      }
      descriptor.position+=i;
      total+=i;
    }
 while (total < len);
  }
  long t2=System.currentTimeMillis();
  long tl=t2 - t1;
  tlSum+=tl;
  tlCount+=1;
  if (tl > 100 || tlCount % 1000 == 0) {
    logger.info("readInternal " + this.filePath.getName() + " timetaken="+ tl+ ",tlSum="+ tlSum+ ",tlCount="+ tlCount);
    if (tlSum > 10000000) {
      tlCount=0;
      tlSum=0;
    }
  }
}
