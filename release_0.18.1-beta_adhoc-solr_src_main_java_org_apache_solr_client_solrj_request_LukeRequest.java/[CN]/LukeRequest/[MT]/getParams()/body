{
  ModifiableSolrParams params=new ModifiableSolrParams();
  if (fields != null && fields.size() > 0) {
    params.add(CommonParams.FL,fields.toArray(new String[fields.size()]));
  }
  if (numTerms >= 0) {
    params.add("numTerms",numTerms + "");
  }
  if (showSchema) {
    params.add("show","schema");
  }
  return params;
}
