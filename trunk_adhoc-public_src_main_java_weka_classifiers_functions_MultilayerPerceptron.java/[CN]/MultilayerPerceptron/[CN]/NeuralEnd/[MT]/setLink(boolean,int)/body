{
  m_input=input;
  if (input) {
    m_type=PURE_INPUT;
  }
 else {
    m_type=PURE_OUTPUT;
  }
  if (val < 0 || (input && val > m_instances.numAttributes()) || (!input && m_instances.classAttribute().isNominal() && val > m_instances.classAttribute().numValues())) {
    m_link=0;
  }
 else {
    m_link=val;
  }
}
