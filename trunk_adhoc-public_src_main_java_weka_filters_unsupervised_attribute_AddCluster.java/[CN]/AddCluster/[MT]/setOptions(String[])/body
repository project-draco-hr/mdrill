{
  String tmpStr;
  String[] tmpOptions;
  File file;
  boolean serializedModel;
  serializedModel=false;
  tmpStr=Utils.getOption("serialized",options);
  if (tmpStr.length() != 0) {
    file=new File(tmpStr);
    if (!file.exists())     throw new FileNotFoundException("File '" + file.getAbsolutePath() + "' not found!");
    if (file.isDirectory())     throw new FileNotFoundException("'" + file.getAbsolutePath() + "' points to a directory not a file!");
    setSerializedClustererFile(file);
    serializedModel=true;
  }
 else {
    setSerializedClustererFile(null);
  }
  if (!serializedModel) {
    tmpStr=Utils.getOption('W',options);
    if (tmpStr.length() == 0)     tmpStr=weka.clusterers.SimpleKMeans.class.getName();
    tmpOptions=Utils.splitOptions(tmpStr);
    if (tmpOptions.length == 0) {
      throw new Exception("Invalid clusterer specification string");
    }
    tmpStr=tmpOptions[0];
    tmpOptions[0]="";
    setClusterer(AbstractClusterer.forName(tmpStr,tmpOptions));
  }
  setIgnoredAttributeIndices(Utils.getOption('I',options));
  Utils.checkForRemainingOptions(options);
}
