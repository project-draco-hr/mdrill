{
  int i;
  if (order == null) {
    m_ColOrder=null;
  }
 else {
    if (order.length == getColCount()) {
      m_ColOrder=new int[order.length];
      for (i=0; i < order.length; i++)       m_ColOrder[i]=order[i];
    }
 else {
      System.err.println("setColOrder: length does not match (" + order.length + " <> "+ getColCount()+ ") - ignored!");
    }
  }
}
