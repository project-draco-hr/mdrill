{
  Class result;
  if (name.equals(Boolean.TYPE.getName()))   result=Boolean.TYPE;
 else   if (name.equals(Byte.TYPE.getName()))   result=Byte.TYPE;
 else   if (name.equals(Character.TYPE.getName()))   result=Character.TYPE;
 else   if (name.equals(Double.TYPE.getName()))   result=Double.TYPE;
 else   if (name.equals(Float.TYPE.getName()))   result=Float.TYPE;
 else   if (name.equals(Integer.TYPE.getName()))   result=Integer.TYPE;
 else   if (name.equals(Long.TYPE.getName()))   result=Long.TYPE;
 else   if (name.equals(Short.TYPE.getName()))   result=Short.TYPE;
 else   result=Class.forName(name);
  return result;
}
