{
  Edge e;
  Node r=m_groups[n].m_p;
  double h=m_groups[n].m_size / 2;
  double c=m_groups[n].m_p.getCenter();
  double m=c - h;
  m_groups[n].m_left=m;
  m_groups[n].m_right=c + h;
  for (int noa=0; (e=r.getChild(noa)) != null; noa++) {
    if (e.getTarget().getParent(0) == e) {
      e.getTarget().adjustCenter(m);
    }
  }
}
