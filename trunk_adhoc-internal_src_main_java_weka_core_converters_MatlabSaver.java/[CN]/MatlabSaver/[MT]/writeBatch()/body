{
  if (getInstances() == null)   throw new IOException("No instances to save");
  if (getRetrieval() == INCREMENTAL)   throw new IOException("Batch and incremental saving cannot be mixed.");
  setRetrieval(BATCH);
  setWriteMode(WRITE);
  if ((retrieveFile() == null) && (getWriter() == null)) {
    System.out.println(matlabHeader());
    for (int i=0; i < getInstances().numInstances(); i++)     System.out.println(instanceToMatlab(getInstances().instance(i)));
    setWriteMode(WAIT);
  }
 else {
    PrintWriter outW=new PrintWriter(getWriter());
    outW.println(matlabHeader());
    for (int i=0; i < getInstances().numInstances(); i++)     outW.println(instanceToMatlab(getInstances().instance(i)));
    outW.flush();
    outW.close();
    setWriteMode(WAIT);
    outW=null;
    resetWriter();
    setWriteMode(CANCEL);
  }
}
