{
  int i, count=0;
  double sd, va, sum=0.0, sqrSum=0.0, value;
  for (i=0; i <= inst.numInstances() - 1; i++) {
    count++;
    value=inst.instance(i).value(attr);
    sum+=value;
    sqrSum+=value * value;
  }
  if (count > 1) {
    va=(sqrSum - sum * sum / count) / count;
    va=Math.abs(va);
    sd=Math.sqrt(va);
  }
 else {
    sd=0.0;
  }
  return sd;
}
