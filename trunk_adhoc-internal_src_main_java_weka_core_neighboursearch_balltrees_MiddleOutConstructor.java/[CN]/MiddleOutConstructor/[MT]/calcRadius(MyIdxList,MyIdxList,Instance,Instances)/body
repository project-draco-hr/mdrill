{
  double radius=Double.NEGATIVE_INFINITY;
  for (int i=0; i < list1.length(); i++) {
    double dist=m_DistanceFunction.distance(pivot,insts.instance(((ListNode)list1.get(i)).idx));
    if (dist > radius)     radius=dist;
  }
  for (int j=0; j < list2.length(); j++) {
    double dist=m_DistanceFunction.distance(pivot,insts.instance(((ListNode)list2.get(j)).idx));
    if (dist > radius)     radius=dist;
  }
  return radius;
}
