{
  int button;
  while (getMainPanel().getTabbedPane().getTabCount() > 0)   getMainPanel().closeFile(false);
  if (getConfirmExit()) {
    button=ComponentHelper.showMessageBox(this,"Quit - " + getTitle(),"Do you really want to quit?",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE);
    if (button == JOptionPane.YES_OPTION)     dispose();
  }
 else {
    dispose();
  }
  if (getExitOnClose())   System.exit(0);
}
