{
  Instances newInstances=new Instances(instances);
  if (instances.classIndex() < 0)   throw new Exception("For class association rule mining a class attribute has to be specified.");
  if (invert) {
    for (int i=0; i < newInstances.numAttributes(); i++) {
      if (i != newInstances.classIndex()) {
        newInstances.deleteAttributeAt(i);
        i--;
      }
    }
    return newInstances;
  }
 else {
    newInstances.setClassIndex(-1);
    newInstances.deleteAttributeAt(instances.classIndex());
    return newInstances;
  }
}
