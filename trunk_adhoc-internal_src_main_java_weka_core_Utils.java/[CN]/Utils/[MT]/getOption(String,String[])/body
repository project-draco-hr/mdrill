{
  String newString;
  int i=getOptionPos(flag,options);
  if (i > -1) {
    if (options[i].equals("-" + flag)) {
      if (i + 1 == options.length) {
        throw new Exception("No value given for -" + flag + " option.");
      }
      options[i]="";
      newString=new String(options[i + 1]);
      options[i + 1]="";
      return newString;
    }
    if (options[i].charAt(1) == '-') {
      return "";
    }
  }
  return "";
}
