{
  m_cIndex=c;
  m_maxC=h;
  m_minC=l;
  if (m_span != null) {
    if (m_plotInstances.numAttributes() > 0 && m_cIndex < m_plotInstances.numAttributes()) {
      if (m_plotInstances.attribute(m_cIndex).isNominal()) {
        if (m_plotInstances.attribute(m_cIndex).numValues() > m_colorList.size()) {
          extendColourMap();
        }
      }
    }
    this.repaint();
  }
}
