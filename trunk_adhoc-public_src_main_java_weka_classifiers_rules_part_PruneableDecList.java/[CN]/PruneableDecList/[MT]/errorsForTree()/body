{
  Distribution test;
  if (m_isLeaf)   return errorsForLeaf();
 else {
    double error=0;
    for (int i=0; i < m_sons.length; i++)     if (Utils.eq(son(i).localModel().distribution().total(),0)) {
      error+=m_test.perBag(i) - m_test.perClassPerBag(i,localModel().distribution().maxClass());
    }
 else     error+=((PruneableDecList)son(i)).errorsForTree();
    return error;
  }
}
