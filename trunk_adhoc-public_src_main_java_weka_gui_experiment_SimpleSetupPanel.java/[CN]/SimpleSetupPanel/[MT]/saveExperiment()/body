{
  int returnVal=m_FileChooser.showSaveDialog(this);
  if (returnVal != JFileChooser.APPROVE_OPTION) {
    return;
  }
  File expFile=m_FileChooser.getSelectedFile();
  if (m_FileChooser.getFileFilter() == m_ExpFilter) {
    if (!expFile.getName().toLowerCase().endsWith(Experiment.FILE_EXTENSION))     expFile=new File(expFile.getParent(),expFile.getName() + Experiment.FILE_EXTENSION);
  }
 else   if (m_FileChooser.getFileFilter() == m_KOMLFilter) {
    if (!expFile.getName().toLowerCase().endsWith(KOML.FILE_EXTENSION))     expFile=new File(expFile.getParent(),expFile.getName() + KOML.FILE_EXTENSION);
  }
 else   if (m_FileChooser.getFileFilter() == m_XMLFilter) {
    if (!expFile.getName().toLowerCase().endsWith(".xml"))     expFile=new File(expFile.getParent(),expFile.getName() + ".xml");
  }
  try {
    Experiment.write(expFile.getAbsolutePath(),m_Exp);
    System.err.println("Saved experiment:\n" + m_Exp);
  }
 catch (  Exception ex) {
    ex.printStackTrace();
    JOptionPane.showMessageDialog(this,"Couldn't save experiment file:\n" + expFile + "\nReason:\n"+ ex.getMessage(),"Save Experiment",JOptionPane.ERROR_MESSAGE);
  }
}
