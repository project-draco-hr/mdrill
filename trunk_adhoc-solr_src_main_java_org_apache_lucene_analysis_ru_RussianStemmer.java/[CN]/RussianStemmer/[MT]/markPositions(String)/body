{
  RV=0;
  R2=0;
  int i=0;
  while (word.length() > i && !isVowel(word.charAt(i))) {
    i++;
  }
  if (word.length() - 1 < ++i)   return;
  RV=i;
  while (word.length() > i && isVowel(word.charAt(i))) {
    i++;
  }
  if (word.length() - 1 < ++i)   return;
  while (word.length() > i && !isVowel(word.charAt(i))) {
    i++;
  }
  if (word.length() - 1 < ++i)   return;
  while (word.length() > i && isVowel(word.charAt(i))) {
    i++;
  }
  if (word.length() - 1 < ++i)   return;
  R2=i;
}
