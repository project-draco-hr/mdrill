{
  String line;
  Throwable t;
  StackTraceElement[] trace;
  int i;
  if (x instanceof Throwable) {
    t=(Throwable)x;
    trace=t.getStackTrace();
    line=t.toString() + "\n";
    for (i=0; i < trace.length; i++)     line+="\t" + trace[i].toString() + "\n";
    x=line;
  }
  printHeader();
  for (i=0; i < size(); i++)   ((PrintStream)m_Streams.get(i)).println(x);
  flush();
}
