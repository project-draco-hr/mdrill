{
  if (!obj.isPrimitive()) {
    return obj;
  }
  if (obj == Boolean.TYPE) {
    return Boolean.class;
  }
  if (obj == Byte.TYPE) {
    return Byte.class;
  }
  if (obj == Character.TYPE) {
    return Character.class;
  }
  if (obj == Short.TYPE) {
    return Short.class;
  }
  if (obj == Integer.TYPE) {
    return Integer.class;
  }
  if (obj == Long.TYPE) {
    return Long.class;
  }
  if (obj == Float.TYPE) {
    return Float.class;
  }
  if (obj == Double.TYPE) {
    return Double.class;
  }
  throw new IllegalArgumentException("Class 'void' is not allowed here");
}
