{
  try {
    conf=YamlUtils.getConfigFromYamlFile("adhoc-metric.yaml");
    String url=(String)conf.get("mysql.url");
    String username=(String)conf.get("mysql.username");
    String password=(String)conf.get("mysql.password");
    Class.forName(JDBC_DRIVER);
    conn=DriverManager.getConnection(url,username,password);
  }
 catch (  IOException e) {
    System.err.println("[" + sdf.format(new Date(System.currentTimeMillis())) + "] "+ "Error when open YAML File");
    e.printStackTrace();
  }
catch (  ClassNotFoundException e) {
    System.err.println("[" + sdf.format(new Date(System.currentTimeMillis())) + "] "+ "Can not find class: "+ JDBC_DRIVER);
    e.printStackTrace();
  }
catch (  SQLException e) {
    System.err.println("[" + sdf.format(new Date(System.currentTimeMillis())) + "] "+ "Error when building MetricService Connection");
    e.printStackTrace();
  }
}
