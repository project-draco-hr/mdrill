{
  if (dir == null)   throw new NullPointerException("directory cannot be null");
  if (name == null)   throw new NullPointerException("name cannot be null");
  this.checkAbort=checkAbort;
  directory=dir;
  fileName=name;
  fileNamepos=posname;
